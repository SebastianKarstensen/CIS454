<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autobook.cis454.autobook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name='android.permission.WAKE_LOCK'/>

    <application
        android:name="com.autobook.cis454.autobook.Autobook"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TestActivities.TwitterTweet"
            android:label="@string/title_activity_twitter_tweet" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NewEvent"
            android:label="@string/title_activity_new_event" >
        </activity>
        <activity
            android:name=".Activities.TwitterLogin"
            android:label="@string/title_activity_twitter_login" >
        </activity>
        <activity android:name=".DatabaseTesting.Receiver.ReceiverActivity" />
        <activity android:name=".DatabaseTesting.Message.MessageActivity" />
        <activity android:name=".DatabaseTesting.DatabaseEventThingy.EventActivity" />
        <activity android:name=".DatabaseTesting.FrontPage.FrontPageActivity" />
        <activity android:name=".Scheduler.SchedulerActivity" />

        <receiver android:name=".Scheduler.AlarmManagerBroadcastReceiver">

        </receiver>

        <activity
            android:name=".Activities.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>

    </application>

</manifest>
