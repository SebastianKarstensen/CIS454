<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.autobook.cis454.autobook.TestActivities.TwitterTestActivity$PlaceholderFragment"
    android:background="@color/twitter_standard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Post To Twitter:"
        android:id="@+id/textView_twitter_headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/off_white"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textArea_tweet_message"
        android:layout_below="@+id/textView_twitter_headline"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@color/twitter_standard"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:background="@color/off_white"
        android:text="\@SebKarstensen I&apos;m tweeting at you through Autobook!"
        android:padding="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textArea_tweet_message"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG-IN"
            android:id="@+id/button_login_twitter"
            android:layout_below="@+id/textArea_tweet_message"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tweet!"
            android:id="@+id/button_tweet"
            android:layout_below="@+id/textArea_tweet_message"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

    </LinearLayout>

</RelativeLayout>
