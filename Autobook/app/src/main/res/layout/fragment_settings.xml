<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/textView_settings_header"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Login to Facebook"
            android:id="@+id/btn_settings_loginFacebook"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            android:layout_weight="60" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Login to Twitter"
            android:id="@+id/btn_settings_loginTwitter"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            android:layout_weight="60" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Edit Message Templates"
            android:id="@+id/btn_settings_editTemplates"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            android:layout_weight="60" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="100" >

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Help/FAQ"
            android:id="@+id/btn_settings_help"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            android:layout_weight="60" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="100" >

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Credits"
            android:id="@+id/btn_settings_credits"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            android:layout_weight="60" />
    </LinearLayout>

</LinearLayout>